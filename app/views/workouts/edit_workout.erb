<div class="container">
  <ul> 
    <% @workout.errors.messages.each do |key, value| %>
    <li><p><%= "#{key.to_s.titleize} #{value.first}" %></p></li>
    <% end if @workout && @workout.errors %>
  </ul>

  <form action="/workouts/<%=@workout.id%>" method="POST">
  <input id="hidden" type="hidden" name="_method" value="PATCH">
  <h2 class="form-signin-heading">Edit workout:</h2>
    <div class="form-group row">
      <label for="date" class="col-sm-2 col-form-label">Date</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" name="date" placeholder="<%= @workout.date.strftime("%m/%d/%Y")%>">
      </div>
    </div>
    <div class="form-group row">
      <label for="time" class="col-sm-2 col-form-label">Time</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" name="time" placeholder="<%= @workout.time.strftime("%I:%Mp")%>">
      </div>
    </div>
    <div class="form-group row">
      <label for="distance" class="col-sm-2 col-form-label">Distance</label>
      <div class="col-sm-10">
      <input type="text" class="form-control" name="distance" placeholder="<%=@workout.distance%>">
    </div>
    </div>

<fieldset id="group1" class="form-group row">
  <legend class="col-form-legend col-sm-2">Workout Type</legend>
    <div class="col-sm-10">
    <div class="form-check">
      <label class="form-check-label">
      <input class="form-check-input" type="radio" name="workout_type" value="running" checked>
      Running
      </label>
    </div>
    <div class="form-check">
      <label class="form-check-label">
      <input class="form-check-input" type="radio" name="workout_type" value="cycling">
      Cycling
      </label>
    </div>
</fieldset>

<fieldset id="group2" class="form-group row">
  <legend class="col-form-legend col-sm-2">Units</legend>
    <div class="col-sm-10">
    <div class="form-check">
      <label class="form-check-label">
      <input class="form-check-input" type="radio" name="unit" value="km" checked>
      km
      </label>
    </div>
    <div class="form-check">
      <label class="form-check-label">
      <input class="form-check-input" type="radio" name="unit" value="miles">
      miles
      </label>
    </div>
  </fieldset>
  <div class="form-group">
    <label for="notes">Notes:</label>
    <textarea class="form-control" rows="5" 
      <input type="text" name="notes" placeholder="<%=@workout.notes%>">
    </textarea>
  </div>
      <div class="form-group row">
      <div class="offset-sm-2 col-sm-10">
        <button type="submit" class="btn btn-primary center-block">Edit workout</button>
      </div>
    </div>
  </form>
</div>

